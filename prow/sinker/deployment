apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: sinker
  name: sinker
  namespace: kubeedge-prowbot
spec:
  replicas: 1
  selector:
    matchLabels:
      app: sinker
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
    type: RollingUpdate
  template:
    metadata:
      labels:
        app: sinker
    spec:
      containers:
      - args:
        - --config-path=/etc/config/config.yaml
        image: gcr.io/k8s-prow/sinker:v20190528-0d7c4b53a
        imagePullPolicy: IfNotPresent
        name: sinker
        resources: {}
        terminationMessagePath: /dev/termination-log
        terminationMessagePolicy: File
        volumeMounts:
        - mountPath: /etc/config
          name: config
          readOnly: true
      dnsPolicy: ClusterFirst
      restartPolicy: Always
      schedulerName: default-scheduler
      securityContext: {}
      serviceAccount: sinker
      serviceAccountName: sinker
      terminationGracePeriodSeconds: 30
      volumes:
      - configMap:
          defaultMode: 420
          name: config
        name: config
